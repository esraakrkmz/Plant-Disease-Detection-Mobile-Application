<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".domatesmozaikvirusu">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="383dp"
        android:text="Mozaik virüsü"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="265dp"
        android:layout_height="302dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/mozaik" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="257dp"
        android:layout_height="207dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="85dp"
        android:text="Mozaik virüsü (ToMV) genellikle temas yoluyla veya enfekte tohumlarla yayılır. mozaik virüsü belirtileri arasında yapraklarda mozaik benzeri desenler, sararma, kıvırcıklık, yaprakların kıvrılması ve genel büyüme geriliği bulunur. Ayrıca, meyvelerde de renk değişiklikleri ve şekil bozuklukları görülebilir. Bitkilerin düzenli olarak kontrol edilmesi ve enfekte bitkilerin hızla uzaklaştırılması önemlidir."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />
</androidx.constraintlayout.widget.ConstraintLayout>